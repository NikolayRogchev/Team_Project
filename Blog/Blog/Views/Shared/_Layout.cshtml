<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../../Content/bootstrap.css" rel="stylesheet" type="text/css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <title>@ViewBag.Title - Blog Software University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/message.js")

    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="../../img/logo.png" style="width: 50px; height: 50px" />
                        @Html.ActionLink("BLOGSTER", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "User")</li>
                    
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Posts<span class="caret"></span></a>
                        <ul class="dropdown-menu multi-column columns-2">

                            <div class="col-sm-6">
                                <ul class="multi-column-dropdown" role="menu">
                                    <li>@Html.ActionLink("All posts", "Index", "Posts") </li>
                                    <li>@Html.ActionLink("Most popular", "Create", "Posts")</li>
                                    <li>@Html.ActionLink("Recent posts", "Index", "Posts")</li>
                                    <li>@Html.ActionLink("Create post", "Create", "Posts")</li>
                                </ul>
                            </div>
                            <div class="col-sm-6">
                                <ul class="multi-column-dropdown" role="menu">
                                    <li>@Html.ActionLink("All categories", "Index", "Posts") </li>
                                    <li>@Html.ActionLink("Fun", "Create", "Posts")</li>
                                    <li>@Html.ActionLink("Science", "Index", "Posts")</li>
                                    <li>@Html.ActionLink("Politics", "Index", "Posts")</li>
                                    <li>@Html.ActionLink("Gallery", "Index", "Posts")</li>
                                </ul>
                            </div>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Popular tags", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Tutorials", "Tutorials", "Home")</li>
                    @if (Request.IsAuthenticated)
                        {
                            <li class="greeting"> Hello,@HttpUtility.HtmlDecode(User.Identity.Name)</li>
                            <li>@Html.ActionLink("Log out", "Logout", "User")</li>
                        }
                        else
                        {
                            <li class="tabulance-log-in" style="padding-left:15em;">@Html.ActionLink("Log in", "Login", "User")</li>
                            <li>@Html.ActionLink("Register", "Register", "User")</li>
                        }
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        </div>
        <footer class="page-footer">
            <div class="col-lg-4">
                <h3>
                    <b>Send Us A Message:</b>
                </h3>
                <h3>blogster@blogster.com</h3>
                <br>
            </div>

            <div class="col-lg-4">
                <h3>
                    <b>Call Us:</b>
                </h3>
                <h3>+55 3984-4389</h3>
                <br>
            </div>

            <div class="col-lg-4">
                <br />
                <h3> &copy; @DateTime.Now.Year - Blog Software University</h3>
                <br />
            </div>
        </footer>
 

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>